{% extends 'layout.html.twig' %}


        {% block page %}
        {% for i in 1..nbPage %}
                
                <li><a href="{{ path('article_index', { 'page': i }) }}">Page {{ i }} </a></li>
        {% endfor %}
        {% endblock %}
   

{% block body %}
    <h1>Article list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Publication</th>
                <th>Contenu</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{% if article.date %}{{ article.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.titre }}</a></td>
                <td>{{ article.auteur }}</td>
                <td>{% if article.publication %}Yes{% else %}No{% endif %}</td>
                <td>{{ article.contenu }}</td>
               
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new entry</a>
        </li>
        <li>
        {% for i in 1..nbPage %}
        
        <a href="{{ path('article_index', { 'page': i }) }}">Page {{ i }} </a>
        {% endfor %}
        </li>
    </ul>
{% endblock %}
