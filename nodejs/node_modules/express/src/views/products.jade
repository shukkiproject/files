extends layout

block main
	section.container-fluid
		form(action='/products', method='POST').form-horizontal
			.form-group
				label.col-sm-2.col-label Nom :
				.col-sm-10
					input(type='text', name='name',value='',placeholder='name').form-control
			.form-group
				label.col-sm-2.col-label description :
				.col-sm-10
					input(type='text', name='desc',value='',placeholder='description').form-control
			.form-group
				label.col-sm-2.col-label Prix :
				.col-sm-10
					input(type='text', name='price',value='',placeholder='prix').form-control
			.form-group
				label.col-sm-2.col-label Lien vers l'image :
				.col-sm-10
					input(type='text', name='image',value='',placeholder='lien d\'image').form-control
			.col-sm-offset-2.col-sm-10
				input(type='submit', value='Ajouter').btn.btn-default


	section.container-fluid 	
		h2 Liste des produits
		table.table.table-hover
			thead
				th Photo
				th Id
				th Nom
				th Description
				th Prix
				th Supprimer
			tbody
				for product in products
					tr
						td
							img(src='' +product.getImage())
						td= product.getId()
						td
							a(href='/products/'+product.getId())= product.getName()
						td= product.getDesc()
						td= product.getPrice()
						td
							a(href='/products/'+product.getId()+'/delete') Supprimer
